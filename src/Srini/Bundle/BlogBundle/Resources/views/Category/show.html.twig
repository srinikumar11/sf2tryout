{% extends '::base.html.twig' %}
{% block body %}
<h1>Category</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
    </tbody>
</table>

<div class="btn-group record_actions">
            <a class="btn" href="{{ path('admin_category_edit', { 'id': entity.id }) }}">
            Edit
        </a> &nbsp;
        <a class="btn" href="{{ path('admin_category') }}">
            Back to the list
        </a>


        <form action="{{ path('admin_category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit" class="btn">Delete</button>
        </form>
    
</div>
{% endblock %}