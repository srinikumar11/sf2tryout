{% extends '::base.html.twig' %}
{% block body %}

<h1>Blog list</h1>

<table class="table-striped">
    <thead>
        <tr>
            
            <th>Title</th>
            <th>Blog</th>
            <th>Published</th>
            <th>Updated_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            
            <td>{{ entity.title }}</td>
            
            <td>{{ entity.published?"Yes":"No" }}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('F,y j') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('blog_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('blog_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('blog_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}
