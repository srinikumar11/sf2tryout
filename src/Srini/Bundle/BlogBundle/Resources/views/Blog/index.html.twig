{% extends '::base.html.twig' %}
{% block body %}
<div class="btn-group">
<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    Actions
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li>
        <a href="{{ path('blog_new') }}">
            New Blog
        </a>
    </li>
  </ul>
        </div>
<h1>Blog list</h1>

<table class="table table-striped">
    <thead>
        <tr>
            
            <th>Title</th>
            
            <th>Published</th>
            <th>Updated at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            
            <td>{{ entity.title }}</td>
            
            <td>{{ entity.published?"Yes":"No" }}</td>
            <td>{% if entity.updatedat %}{{ entity.updatedat|date('j F, Y ') }}{% endif %}</td>
            <td>
              
                <a class="btn" href="{{ path('blog_show', { 'id': entity.id, 'slug': entity.slug }) }}">show</a>
                <a class="btn" href="{{ path('blog_edit', { 'id': entity.id }) }}">edit</a>
              </td>
        </tr>
    {% endfor %}
    </tbody>
</table>


{% endblock %}
