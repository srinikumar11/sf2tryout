{% extends '::base.html.twig' %}
{% block body %}
  <div class="btn-group">
<a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
    Actions
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li>
        <a href="{{ path('category_new') }}">
            New job category
        </a>
    </li>
  </ul>
        </div>
<h1>Category list</h1>

<table class="table table-striped records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>

                        <a class="btn" href="{{ path('category_show', { 'id': entity.id }) }}">show</a>
                        <a class="btn" href="{{ path('category_edit', { 'id': entity.id }) }}">edit</a>
                        
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

        

{% endblock %}