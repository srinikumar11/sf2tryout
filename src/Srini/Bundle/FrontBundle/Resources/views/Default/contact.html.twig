{% extends '::base.html.twig' %}
{% block body %}
<h2>Contact Srinivasan</h2>

    <form action="{{ path('_contact') }}" method="POST" id="contact_form">
        {{ form_errors(form) }}
        {{ form_row(form.name) }}    
        {{ form_row(form.email) }}
        {{ form_row(form.message) }}

        {{ form_rest(form) }}
        <input type="submit" value="Send" class="symfony-button-grey" />
    </form>
{% endblock %}
